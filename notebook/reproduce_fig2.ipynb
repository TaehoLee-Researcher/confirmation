# ============================================================
# Reproduce Figure 2 (A–C): DNABERT-2 Functional Separation
# Deterministic, CPU-only, repository-level reproducibility
# ============================================================

# ----------------------------
# 0. Environment setup
# ----------------------------
import os
import random
import numpy as np
import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns

from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA
from sklearn.metrics.pairwise import cosine_similarity
import umap

# ----------------------------
# 1. Deterministic settings
# ----------------------------
SEED = 42
random.seed(SEED)
np.random.seed(SEED)

# ----------------------------
# 2. Load fixed inputs
# ----------------------------
# Repository structure assumption:
# confirmation/
# ├── data/
# │   ├── X_dnbert2.npy
# │   └── posneg_sequences.csv
# ├── notebook/
# │   └── reproduce_fig2.ipynb
# └── outputs/

X_PATH = "../data/X_dnbert2.npy"
CSV_PATH = "../data/posneg_sequences.csv"

assert os.path.exists(X_PATH), "Missing X_dnbert2.npy in data/"
assert os.path.exists(CSV_PATH), "Missing posneg_sequences.csv in data/"

X = np.load(X_PATH)
df = pd.read_csv(CSV_PATH)

assert len(X) == len(df), "Embedding count and CSV rows do not match"

labels = df["label"].values
names = df["name"].values if "name" in df.columns else df.index.astype(str)

print("Embeddings shape:", X.shape)
print("Label distribution:")
print(pd.Series(labels).value_counts())

# ----------------------------
# 3. Standardization
# ----------------------------
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# ----------------------------
# 4. Figure 2A (Left): PCA
# ----------------------------
pca = PCA(n_components=2, random_state=SEED)
X_pca = pca.fit_transform(X_scaled)

os.makedirs("../outputs", exist_ok=True)

plt.figure(figsize=(6, 5))
for lab, color in [(1, "red"), (0, "gray")]:
    idx = labels == lab
    plt.scatter(
        X_pca[idx, 0],
        X_pca[idx, 1],
        c=color,
        s=140,
        edgecolor="black",
        label="POS" if lab == 1 else "NEG",
    )

plt.xlabel("PC1")
plt.ylabel("PC2")
plt.legend()
plt.title("Figure 2A: PCA")
plt.tight_layout()
plt.savefig("../outputs/Fig2A_PCA.png", dpi=300)
plt.show()

# ----------------------------
# 5. Figure 2A (Right): UMAP
# ----------------------------
reducer = umap.UMAP(
    n_neighbors=5,
    min_dist=0.1,
    n_components=2,
    random_state=SEED,
)

X_umap = reducer.fit_transform(X_scaled)

plt.figure(figsize=(6, 5))
for lab, color in [(1, "red"), (0, "gray")]:
    idx = labels == lab
    plt.scatter(
        X_umap[idx, 0],
        X_umap[idx, 1],
        c=color,
        s=140,
        edgecolor="black",
        label="POS" if lab == 1 else "NEG",
    )

plt.xlabel("UMAP-1")
plt.ylabel("UMAP-2")
plt.legend()
plt.title("Figure 2A: UMAP")
plt.tight_layout()
plt.savefig("../outputs/Fig2A_UMAP.png", dpi=300)
plt.show()

# ----------------------------
# 6. Figure 2B: Cosine similarity heatmap
# ----------------------------
cos_sim = cosine_similarity(X_scaled)

plt.figure(figsize=(9, 7))
sns.heatmap(
    cos_sim,
    xticklabels=names,
    yticklabels=names,
    cmap="viridis",
    square=True,
)

plt.title("Figure 2B: Cosine similarity")
plt.tight_layout()
plt.savefig("../outputs/Fig2B_heatmap.png", dpi=300)
plt.show()

# ----------------------------
# 7. Figure 2C: Leave-one-out holdout ranking
# ----------------------------
results = []

print("\nFigure 2C: Leave-one-out holdout ranking")
print("-" * 50)

for i in range(len(X_scaled)):
    if labels[i] != 1:
        continue

    sims = cos_sim[i].copy()
    sims[i] = -np.inf  # exclude self

    order = np.argsort(sims)[::-1]
    ranked_labels = labels[order]

    rank_other_pos = np.where(ranked_labels == 1)[0][0] + 1

    results.append(
        {
            "query": names[i],
            "rank_of_other_POS": rank_other_pos,
        }
    )

    print(f"Query [{names[i]}] → other POS ranked #{rank_other_pos}")

print("-" * 50)

res_df = pd.DataFrame(results)
res_df.to_csv("../outputs/Fig2C_holdout_ranking.csv", index=False)

print("\nAll outputs saved to ../outputs/")
